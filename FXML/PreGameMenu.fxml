<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@../CSS/style.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.PreGameController">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="createGame" text="Create Game"/>
            <TextField fx:id="friendName" maxWidth="300" promptText="Enter your friend's nickName/email"/>
            <Button fx:id="play" onMouseClicked="#checkName" text="Play"/>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="BOTTOM_LEFT" spacing="10">
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </BorderPane.margin>
        </VBox>
    </bottom>

</BorderPane>
